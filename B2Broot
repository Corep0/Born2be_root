Disk Load : #!/bin/bash
fdisk=$(df -BG --total | grep 'total' | awk '{print $2}' | sed 's/G//')
udisk=$(df -BM --total | grep 'total' | awk '{print $3}' | sed 's/M//')
pdisk=$(df -BM --total | grep 'total' | awk '{printf("%d", $3/$2*100)}')
echo "#Disk Usage: ${udisk}/${fdisk}Gb (${pdisk}%)"
